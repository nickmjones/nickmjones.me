---
const { title, description, imgsrc, link, className = '' } = Astro.props
import Image from "astro/components/Image.astro"
import Button from "./Button.astro"
---

<style>
  .card {
    background-color: white;
    display: flex;
    position: relative;
    min-height: 8rem;
  }
  .card_content {
    padding: 8rem;
    opacity: 0;
    transition: all .20s ease-in-out;
    background: rgba(0,0,0,0.6);
    backdrop-filter: blur(10px);
    color: rgba(255,255,255,0.7);
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: absolute;
    align-items: flex-start;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 80;
  }
  .card:hover > .card_content {
    opacity: 1;
  }
</style>

<div class={`card rounded-md overflow-hidden ${className}`}>
  <Image src={imgsrc} alt={description} />
    <div class="card_content">
      <h1 class="font-bold">{title}</h1>
      <p class="md:text-3xl mb-8">{description}</p>
      <Button title="See the case study" link={link} />
    </div>
</div>
