---
const { title, description, imgsrc, link, className = '' } = Astro.props
import Image from "astro/components/Image.astro"
import Button from "./Button.astro"
---

<div class="overflow-hidden">
  <Image src={imgsrc} alt={description} class="rounded-md"/>
    <div class="py-8">
      <h1 class="font-bold">{title}</h1>
      <p class="md:text-2xl mb-8">{description}</p>
      <Button title={title} link={link} />
    </div>
</div>
