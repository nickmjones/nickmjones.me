---
import CoreLayout from "../layouts/CoreLayout.astro"
import Card from "../components/Card.astro"
import tile_000 from "../images/tile_000.png"
import wp_000 from "../images/wp_000.png"
import personal_001 from "../images/personal_001.png"
---

<CoreLayout>

	<div class="h-[75vh] flex flex-col justify-center p-8 md:p-20 mt-16">
		<h1 class="text-5xl md:w-2/3 leading-tight font-bold text-gray-600">
			Hi, I'm Nick Jones. I'm a multidisciplinary product designer based in NYC.
		</h1>
	</div>

	<div class="overflow-hidden grid grid-cols-1 md:grid-cols-2 gap-2">
		<Card title="Tile.com" imgsrc={tile_000} description="In the summer of 2023, I led a project to redesign the entire Tile.com user experience, including the homepage and the store experience." className="md:col-span-2" />
		<Card title="Workpath" imgsrc={wp_000} description="I redesigned and redeveloped Workpath.co and developed a design kit for future use." className="md:col-span-1" />
		<Card title="Personal Projects" imgsrc={personal_001} description="Experiments and illustrations in Figma" className="md:col-span-1" />
	</div>



</CoreLayout>

